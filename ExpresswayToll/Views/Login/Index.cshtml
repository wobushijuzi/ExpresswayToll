@model Model.t_User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title></title>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="favicon.ico" />
    @Styles.Render("~/Content/css/global")
    @Styles.Render("~/Content/login")
    @*@Styles.Render("~/Content/css/datapicker")*@
</head>
<body class="login">
    <div class="logo">
        <h1 style="color:white">高速公路收费系统</h1>
    </div>
    <div class="content">
        <form class="login-form text-center" action="/Login/Index" method="post">
            <h3 class="form-title font-green">登 录</h3>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">用户名</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control form-control-solid placeholder-no-fix" type="text" placeholder="用 户 名" name="UserName" value="@(Request.Cookies["UserName"] != null ? HttpUtility.UrlDecode(Request.Cookies["UserName"].Value ,System.Text.Encoding.GetEncoding("UTF-8")) : "")" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">密码</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control form-control-solid placeholder-no-fix" type="password" placeholder="密    码" name="Password" value="@(Request.Cookies["Password"] != null ? Request.Cookies["Password"].Value : "")" />
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-9">
                        <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="验 证 码" name="ValidateCode" />
                    </div>
                    <img style="cursor: pointer; vertical-align:middle" src="@Url.Action("VerifyImage", "Login")" id="VerifyImage" title="看不清？点击换一个" onclick="javascript:document.getElementById('VerifyImage').src='@Url.Action("VerifyImage", "Login")?r='+Math.random();return false;">
                </div>

            </div>
            <div class="form-actions text-right">
                <label class="rememberme check mt-checkbox mt-checkbox-outline">
                    <input type="checkbox" name="remember" value="1" checked="checked" />记住密码
                    <span></span>
                </label>
                <button type="submit" class="btn green uppercase">登录</button>
            </div>
            <div class="create-account ">
                <p>
                    <a href="javascript:;" id="register-btn" class="uppercase">注册</a>
                </p>
            </div>
        </form>
        <div class="register-form">
            @Html.Partial("Reg")
        </div>
    </div>

    <div class="copyright"> 2017 © Metronic. Admin Dashboard Template. </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/platform/global")
    @Scripts.Render("~/bundles/platform/layout")
    @Scripts.Render("~/bundles/platform/login")
    @*@Scripts.Render("~/bundles/platform/datapicker")*@
    <script src="~/Content/assets/pages/scripts/login.js" charset="gbk"></script>
</body>
</html>