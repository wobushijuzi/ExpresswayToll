@model Model.t_TollGate
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-equalizer font-red-sunglo"></i>
            <span class="caption-subject font-red-sunglo bold uppercase">添加收费站 </span>
        </div>
    </div>
    <div class="portlet-body form">
        <form action="Add" method="post" class="form-horizontal">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">收费站名称</label>
                    <div class="col-md-4">
                        <div class="input-icon">
                            <i class="fa fa-bell-o"></i>
                            @Html.TextBoxFor(c => c.TollGate, new { @class = "form-control", placeholder = "收费站名称" })
                            @*<input type="text" class="form-control" name="Start" placeholder="开始点">*@
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">所属地</label>
                    <div class="col-md-4">
                        <div class="input-icon">
                            <i class="fa fa-bell-o"></i>
                            @Html.DropDownList("Loction", ViewBag.List as IEnumerable<SelectListItem>, new { @class = "form-control placeholder-no-fix" })
                            @*@Html.TextBoxFor(c => c.Loction, new { @class = "form-control", placeholder = "所属地" })*@
                            @*<input type="text" class="form-control" name="End" placeholder="结束点">*@
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">收费口数量</label>
                    <div class="col-md-4">
                        <div class="input-icon">
                            <i class="fa fa-bell-o"></i>
                            @Html.DropDownList("Count", ViewBag.CountList as IEnumerable<SelectListItem>, new { @class = "form-control placeholder-no-fix" })
                            @*@Html.TextBoxFor(c => c.Count, new { @class = "form-control", placeholder = "收费口数量" })*@
                            @*<input type="text" class="form-control" name="Distance" placeholder="距离">*@
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">所在道路</label>
                    <div class="col-md-4">
                        <div class="input-icon">
                            <i class="fa fa-bell-o"></i>
                            @Html.DropDownList("RoadName", ViewBag.RoadList as IEnumerable<SelectListItem>, new { @class = "form-control placeholder-no-fix" })
                            @*@Html.TextBoxFor(c => c.road.RoadName, new { @class = "form-control", placeholder = "所在道路" })*@
                            @*<input type="text" class="form-control" name="RoadName" placeholder="所在道路">*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn green">提交</button>
                        <button type="button" class="btn default" onclick="location.href='@Url.Action("Index")'">取消</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
