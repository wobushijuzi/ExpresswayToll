@model IEnumerable<Model.t_Menu>
<div class="page-sidebar navbar-collapse collapse">
    <ul class="page-sidebar-menu  page-header-fixed " data-keep-expanded="false" data-auto-scroll="true" data-slide-speed="200" style="padding-top: 20px">
        <li class="sidebar-toggler-wrapper hide">
            <div class="sidebar-toggler">
                <span></span>
            </div>
        </li>
        @{
            foreach (var item in Model.Where(c => c.Pid == 0))
            {
                <li class="nav-item">
                    <a href="/@item.Controller/@item.Action" class="nav-link nav-toggle">
                        <i class="icon-home"></i>
                        <span class="title">@item.MenuName</span>
                        <span class="selected"></span>
                        <span class="arrow open"></span>
                    </a>
                    <ul class="sub-menu">
                        @foreach (var ii in Model.Where(c => c.Pid == item.Id))
                        {
                            <li class="nav-item">
                                <a href="/@ii.Controller/@ii.Action" class="nav-link ">
                                    <i class="icon-bar-chart"></i>
                                    <span class="title">@ii.MenuName</span>
                                    <span class="selected"></span>
                                </a>
                            </li>
                        }
                    </ul>
                </li>
            }
        }
