@model Model.t_ChargeStandard
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-equalizer font-red-sunglo"></i>
            <span class="caption-subject font-red-sunglo bold uppercase">添加收费标准 </span>
        </div>
    </div>
    <div class="portlet-body form">
        <form action="Add" method="post" class="form-horizontal">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">车辆类型</label>
                    <div class="col-md-4">
                        <div class="input-icon">
                            <i class="fa fa-bell-o"></i>
                            @Html.DropDownList("CarType", ViewBag.CarType as IEnumerable<SelectListItem>, new { @class = "form-control placeholder-no-fix" })
                            @*<input type="text" class="form-control" name="CarType" placeholder="车辆类型">*@
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">最小重量</label>
                    <div class="col-md-4">
                        <div class="input-icon">
                            <i class="fa fa-bell-o"></i>
                            <input type="text" class="form-control" name="WeightMin" placeholder="最小重量">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">最大重量</label>
                    <div class="col-md-4">
                        <div class="input-icon">
                            <i class="fa fa-bell-o"></i>
                            <input type="text" class="form-control" name="WeightMax" placeholder="最大重量">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">收费比例</label>
                    <div class="col-md-4">
                        <div class="input-icon">
                            <i class="fa fa-bell-o"></i>
                            <input type="text" class="form-control" name="Ratio" placeholder="收费比例">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">备注</label>
                    <div class="col-md-4">
                        <div class="input-icon">
                            <i class="fa fa-bell-o"></i>
                            <input type="text" class="form-control" name="Remark" placeholder="备注">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn green">提交</button>
                        <button type="button" class="btn default" onclick="location.href='@Url.Action("Index")'">取消</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

